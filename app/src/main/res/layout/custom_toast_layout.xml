<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_toast_layout"
    android:layout_width="200dp"
    android:layout_height="175dp"
    android:padding="8dp"
    android:background="@drawable/round_border">


    <TextView
        android:id="@+id/toast_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Information" />

    <TextView
        android:id="@+id/toast_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/toast_title"
        app:layout_constraintStart_toStartOf="@id/toast_title"
        app:layout_constraintTop_toBottomOf="@id/toast_title"
        tools:text="Description Information" />

    <ImageView
        android:id="@+id/toast_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/desciption_icon"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toast_message" />

</androidx.constraintlayout.widget.ConstraintLayout>